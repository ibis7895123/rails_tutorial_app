<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <!-- ユーザープロフィール -->
    <section class="user_info">
      <h1>
        <%= gravatar_for @user, size:200 %><!--  -->
        <%= @user.name %>
      </h1>
    </section>
    <!-- フォローステータス -->
    <section class="stats">
      <%= render "shared/stats" %>
      <!--  -->
    </section>
  </aside>

  <div class="col-md-8">
    <!-- フォローボタン -->
    <%= render "follow_form" if logged_in? %>

    <!-- 投稿 -->
    <% if @user.microposts.any? %>
    <h3>Microposts (<%= @user.microposts.count %>)</h3>

    <ol class="microposts">
      <%= render @microposts %>
    </ol>

    <%= will_paginate(@microposts) %><!-- ページネーション -->
    <% end %>
  </div>
</div>
